<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.maxwow" name="MaxWoW Kodi Add-ons Repository" version="0.0.1" provider-name="maxgrass">
    <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="MaxWoW Repository">
    	<info compressed="false">https://raw.githubusercontent.com/maxgrass/repository.maxwow/master/addon.xml</info>
	<checksum>https://raw.githubusercontent.com/maxgrass/repository.maxwow/master/addon.xml.md5</checksum>
	<datadir zip="true">https://raw.githubusercontent.com/maxgrass/repository.maxwow/master/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">MaxWoW Add-on Repository</summary>
        <description lang="en">MaxWoW Add-on Repository</description>
        <description lang="de">MaxWoW Add-on Repository</description>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
            <screenshot>screenshot-01.png</screenshot>
        </assets>
    </extension>
</addon>

<addon id="service.autostart" name="autostart" version="0.0.5" provider-name="maxgrass">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.png</fanart>
            <screenshot>resources/screenshot-01.png</screenshot>
        </assets>
        <news>- automated updates</news>
        <description lang="en">Opens a window or launches an addon when Kodi starts.</description>
        <description lang="de">Ã–ffnet ein Fenster oder ein Addon beim Kodi-Start.</description>
        <disclaimer lang="en"></disclaimer>
        <email>max AT maxgrass.eu</email>
        <platform>all</platform>
        <language></language>
        <summary lang="en">Actions on Kodi start</summary>
        <license>MIT</license>
        <source>https://github.com/maxgrass/service.autostart</source>
        <website>http://maxgrass.eu/</website>
    </extension>
</addon>
</addons>